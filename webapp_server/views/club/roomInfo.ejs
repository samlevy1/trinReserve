<%- include('../partials/header', {title:"TrinReserve"}) -%>
  <title>Room Information - <%= room %></title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
      padding: 20px;
      line-height: 1.6;
      background-color: #333; /* Darker background for the body */
      color: #F7D6EB; /* Lighter text color for readability */
    }
    .container {
      background-color: #444; /* Darker background for the container */
      border: 1px solid #555; /* Darker border color */
      padding: 20px;
      border-radius: 8px;
      color: #F7D6EB; /* Lighter text color inside the container */
    }
    label {
      display: block;
      margin: 10px 0 5px;
      color: #F7D6EB; /* Ensuring labels are readable */
    }
    input[type="text"],
    textarea {
      width: 100%;
      padding: 8px;
      margin: 6px 0;
      display: inline-block;
      border: 1px solid #666; /* Darker border for input elements */
      background-color: #DCFAF5; /* Darker background for input elements */
      color: #F7D6EB; /* Lighter text color for input elements */
      border-radius: 4px;
      box-sizing: border-box;
    }
    button {
      background-color: #F7D6EB; /* Slightly darker green for buttons */
      color: #666;
      padding: 14px 20px;
      margin: 10px 0;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
    button:hover {
      background-color: #484; /* Darker shade for hover state */
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Room <%= room %></h1>
    <p>This is the room information page for room <%= room %>.</p>
    <p>Room Capacity: <%= size %></p>
    <form action="/reserve/date/N325/email" method="POST">
      <label for="club">Club Name:</label>
      <input type="text" name="club" id="club" placeholder="Classics Club">

      <label for="N325Details">Meeting Details:</label>
      <textarea id="N325Details" name="N325Details" placeholder="Scanning Competition"></textarea>

      <button type="submit" class="btn details-button">Reserve</button>
    </form>
  </div>
  <%- include('../partials/footer') -%>